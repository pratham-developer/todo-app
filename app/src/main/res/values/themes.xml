<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- Base application theme. -->
    <style name="Base.Theme.Todo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Todo" parent="Base.Theme.Todo" />

    <style name="CustomRoundedDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.RoundedDialog</item>
        <item name="android:background">@color/secondary</item>
    </style>

    <style name="ShapeAppearanceOverlay.RoundedDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary</item>
    </style>


        <style name="CustomTextInputEditTextTheme" parent="Theme.MaterialComponents.DayNight">
            <!-- Change cursor and selection handle colors -->
            <item name="colorControlActivated">@color/primary</item>
            <!-- Optionally change other colors like the text highlight -->
            <item name="android:textColorHighlight">@color/primary</item>
        </style>

