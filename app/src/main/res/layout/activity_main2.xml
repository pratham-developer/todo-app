<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pagebkg"
    tools:context=".MainActivity2">

    <!-- Title and Buttons Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/titleAndButtonsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:paddingHorizontal="16dp">

        <!-- Sidebar Button on the left -->
        <ImageView
            android:id="@+id/sidebarButton"
            android:src="@drawable/logout"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:rotation="180"
            android:contentDescription="Sidebar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="16dp" />

        <!-- Title TextView centered in the container -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Todo"
            style="@style/TextAppearance.AppCompat.Title"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="@color/secondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/sidebarButton"
            app:layout_constraintEnd_toStartOf="@id/delBut"
            android:layout_marginBottom="8dp" />

        <!-- Refresh Button on the right -->
        <ImageView
            android:id="@+id/delBut"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="Refresh"
            android:src="@drawable/delete"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- SwipeRefreshLayout wrapping the RecyclerView -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/titleAndButtonsContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- RecyclerView for displaying todos -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTodos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:paddingBottom="200dp"
            android:clipToPadding="false" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Floating Action Button floating over the RecyclerView -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Add Todo"
        app:backgroundTint="@color/primary"
        app:fabSize="normal"
        app:useCompatPadding="true"
        android:scaleX="1.3"
        android:scaleY="1.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="80dp"
        android:layout_marginEnd="40dp"
        android:tint="@null"
        android:src="@drawable/add"
        app:maxImageSize="26dp" />

    <!-- Progress Bar for loading indicator -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:indicatorColor="@color/white"
    app:trackColor="@color/green"
      android:scaleY="2"
        android:scaleX="2"
        android:indeterminate="true"/>


</androidx.constraintlayout.widget.ConstraintLayout>
